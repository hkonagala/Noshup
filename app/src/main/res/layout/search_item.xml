<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_cv"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    android:background="?selectableItemBackground">

    <RelativeLayout
        android:id="@+id/search_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="4dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/search_view_inset"
            android:background="@drawable/round" />

        <TextView
            android:id="@+id/search_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_toRightOf="@id/search_icon"
            android:layout_alignTop="@id/search_icon"
            android:layout_marginTop="@dimen/search_view_inset"
            android:layout_marginLeft="@dimen/search_view_inset"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_content_margin"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/search_category"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_name"
            android:layout_toRightOf="@id/search_icon"
            android:padding="4dp"
            android:textSize="@dimen/activity_margin"
            android:layout_marginLeft="@dimen/search_view_inset"/>


        <TextView
            android:id="@+id/search_address"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_category"
            android:padding="4dp"
            android:layout_toRightOf="@id/search_icon"
            android:layout_marginLeft="@dimen/search_view_inset"
            android:layout_marginBottom="@dimen/search_view_inset"
            android:textSize="12dp"/>


        <ImageView
            android:id="@+id/search_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            android:layout_marginRight="@dimen/search_view_inset"
            android:layout_marginTop="@dimen/search_view_inset"
            android:src="@drawable/ic_favorite_border_black_24dp"/>

        <TextView
            android:id="@+id/search_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_bookmark"
            android:padding="4dp"
            android:textAlignment="textStart"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/search_view_inset"
            android:gravity="start"
            android:textColor="@color/colorAccent"/>


    </RelativeLayout>



</android.support.v7.widget.CardView>