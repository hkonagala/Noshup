<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false"
            app:statusBarScrim="@null"
            android:fitsSystemWindows="true">

            <com.google.android.gms.maps.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/main_lay"
                android:apiKey="@string/google_maps_key"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                app:layout_collapseMode="parallax"/>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/details_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/detail_name"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_margin="@dimen/search_view_inset"/>

        <ImageView
            android:id="@+id/detail_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            android:layout_marginRight="@dimen/search_view_inset"
            android:layout_marginTop="@dimen/search_view_inset"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:layout_alignRight="@id/detail_name"
            android:layout_alignEnd="@id/detail_name" />


        <TextView
            android:id="@+id/detail_category"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/search_view_inset"
            android:layout_below="@id/detail_name"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/detail_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/detail_bookmark"
            android:padding="4dp"
            android:layout_marginRight="@dimen/search_view_inset"
            android:layout_marginTop="@dimen/search_view_inset"
            android:layout_alignRight="@id/detail_category"
            android:layout_alignEnd="@id/detail_category"
            android:gravity="start"/>

        <TextView
            android:id="@+id/detail_hours"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/search_view_inset"
            android:layout_below="@id/detail_category"
            android:padding="4dp"/>

        <LinearLayout
            android:id="@+id/external_links_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/detail_hours"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:padding="4dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp">

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_restaurant_menu_black_24dp"
                android:layout_marginRight="@dimen/search_view_inset"/>

            <TextView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_margin_content"/>

            <ImageView
                android:id="@+id/website_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_public_black_24dp"
                android:layout_marginRight="@dimen/search_view_inset"/>

            <TextView
                android:id="@+id/website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/detail_phone"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/external_links_container"
            android:layout_margin="@dimen/search_view_inset"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/detail_address"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_phone"
            android:layout_margin="@dimen/search_view_inset"
            android:padding="4dp"/>


    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>