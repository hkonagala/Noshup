<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true">

            <com.google.android.gms.maps.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/main_lay"
                android:apiKey="@string/google_maps_key"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"/>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/details_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fitsSystemWindows="true"
            android:layout_marginTop="@dimen/activity_margin_content">

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_margin="@dimen/search_view_inset"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/activity_margin_content"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/detail_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="4dp"
                android:layout_marginRight="@dimen/search_view_inset"
                android:layout_marginTop="@dimen/search_view_inset"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:layout_alignRight="@id/detail_name"
                android:layout_alignEnd="@id/detail_name" />


            <TextView
                android:id="@+id/detail_category"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/search_view_inset"
                android:layout_below="@id/detail_name"
                android:padding="4dp"
                />

            <TextView
                android:id="@+id/detail_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/detail_bookmark"
                android:padding="4dp"
                android:layout_marginRight="@dimen/search_view_inset"
                android:layout_marginTop="@dimen/search_view_inset"
                android:layout_alignRight="@id/detail_category"
                android:layout_alignEnd="@id/detail_category"
                android:layout_marginEnd="@dimen/search_view_inset"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/detail_hours"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/search_view_inset"
                android:layout_below="@id/detail_category"
                android:padding="4dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/external_links_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_hours"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:padding="4dp"
                android:layout_margin="@dimen/search_view_inset">

                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_restaurant_menu_black_24dp"
                    android:layout_margin="@dimen/search_view_inset"
                    android:padding="2dp"/>

                <TextView
                    android:id="@+id/menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/menu_icon"
                    android:layout_margin="@dimen/search_view_inset"
                    android:layout_alignBottom="@id/menu_icon"
                    android:gravity="bottom"
                    android:text="dfjhdjsdf"
                    android:textColor="@color/colorAccent" />

                <ImageView
                    android:id="@+id/website_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_public_black_24dp"
                    android:layout_below="@id/menu_icon"
                    android:padding="2dp"
                    android:layout_margin="@dimen/search_view_inset"/>

                <TextView
                    android:id="@+id/website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/search_view_inset"
                    android:layout_toRightOf="@id/website_icon"
                    android:layout_alignBottom="@id/website_icon"
                    android:gravity="center"
                    android:text="sdjhfjds"
                    android:textColor="@color/colorAccent" />

            </RelativeLayout>

            <TextView
                android:id="@+id/detail_phone"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/external_links_container"
                android:layout_margin="@dimen/search_view_inset"
                android:padding="4dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/detail_address"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_phone"
                android:layout_margin="@dimen/search_view_inset"
                android:padding="4dp"
                android:textStyle="bold"/>


        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/detail_fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="@dimen/activity_margin_content"
        app:layout_anchor="@id/appbar_lay"
        app:layout_anchorGravity="bottom|end" />

</android.support.design.widget.CoordinatorLayout>