<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/search_view_inset"
    android:id="@+id/suggestions_list"
    android:background="?selectableItemBackground">

    <TextView
        android:id="@+id/suggestion_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/suggestion_hours"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/suggestion_name"/>

    <TextView
        android:id="@+id/suggestion_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/suggestion_name"
        android:layout_toEndOf="@id/suggestion_name"
        android:padding="4dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:textAlignment="center"
        />

</RelativeLayout>